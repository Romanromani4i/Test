#include <iostream>
using namespace std;

//Structura node-ului
struct Nod {
    int val;
    Nod* urmator;

    Nod(int valoare);
};

//Clasul listei
class Stiva {
public:
    Stiva();

    void Inserare(int valoare);
    int Stergere();

    bool EsteGoala();
private:
    Nod* nodul;
};

//Functiile
Nod::Nod(int valoare) {
    val = valoare;
    urmator = nullptr;
}

Stiva::Stiva() {
    nodul = nullptr;
}
    //Inserarea in lista
void Stiva::Inserare(int valoare) {
    Nod* temporal = new Nod(valoare);
    temporal->urmator = nodul;

    nodul = temporal;
}
    //Stergerea din stva
int Stiva::Stergere() {
    Nod* temporal = nodul;
    int valoarea = temporal->val;

    nodul = temporal->urmator;
    delete temporal;

    return valoarea;
}

    //Este sti#include <iostream>
using namespace std;

//Structura node-ului
struct Nod {
    int val;
    Nod* urmator;

    Nod(int valoare);
};

//Clasul listei
class Stiva {
public:
    Stiva();

    void Inserare(int valoare);
    int Stergere();

    bool EsteGoala();
private:
    Nod* nodul;
};

//Functiile
Nod::Nod(int valoare) {
    val = valoare;
    urmator = nullptr;
}

Stiva::Stiva() {
    nodul = nullptr;
}
    //Inserarea in lista
void Stiva::Inserare(int valoare) {
    Nod* temporal = new Nod(valoare);
    temporal->urmator = nodul;

    nodul = temporal;
}
    //Stergerea din stva
int Stiva::Stergere() {
    Nod* temporal = nodul;
    int valoarea = temporal->val;

    nodul = temporal->urmator;
    delete temporal;

    return valoarea;
}

    //Este stiva goala sau nu
bool Stiva::EsteGoala() {
    if (nodul == nullptr)
        return true;
    else
        return false;
}

int main()
{
    Stiva sirul;
    int x,y;
    y=0;
    cout<<"Introduceti lista: "<<endl;
    while (x!=0)
    {
        cin>>x;
        sirul.Inserare(x);
        if(x=2)y++;
    }
    while(!sirul.EsteGoala())
    {
        cout<<"Sirul : "<<sirul.Stergere()<<endl;
    }
    cout<<"Cifre de 2: "<<y<<endl;
    return 0;
}
va goala sau nu
bool Stiva::EsteGoala() {
    if (nodul == nullptr)
        return true;
    else
        return false;
}

